---
interface Props {
    title: string;
    date: {
        start: string;
        end?: string;
    }
    description: string;
    responsibilities?: string[];
}
const { title, date, description, responsibilities } = Astro.props;
---

<div>
    <h2 class="text-xl text-gray-800 dark:text-gray-200">
        {title}
    </h2>
    <p class="text-gray-600 dark:text-gray-400">{date.start} - {date.end || "Actualmente"}</p>
    <p class="text-gray-700 dark:text-gray-300">{description}</p>
    <!-- <ul class="list-disc list-inside text-gray-700 dark:text-gray-300">
        {props.responsibilities.map((responsibility) => (
            <li>{responsibility}</li>
        ))}
    </ul> -->
</div>